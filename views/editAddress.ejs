<%- include('./partials/header') %>
<div class="flex w-full py-20 h-screen justify-center items-center">
<div class="w-1/3 bg-red-200  flex flex-col items-center">
    <h1 class="text-3xl mt-52 mb-5">Edit Address</h1>
    <form autocomplete="off" method="post" action="/users/editaddress/<%=address._id%>">
        <h1 class="text-xl mt-5 mb-5">Name</h1>
          <input type="text" placeholder="Fullname" value="<%=address.name%>" name="name">
          <h1 class="text-xl   mt-5 mb-5">Phone</h1>
          <input type="number" placeholder="Phone" value="<%=address.phone%>" name="phone">
          <h1 class="text-xl mt-5 mb-5">Pincode</h1>
          <input type="number" placeholder="Pincode" value="<%=address.pincode%>" name="pincode">
          <h1 class="text-xl  mt-5 mb-5">Street</h1>
          <input type="text" placeholder="street" value="<%=address.street%>" name="street">
          <h1 class="text-xl  mt-5 mb-5">City</h1>
          <input type="text" placeholder="City" value="<%=address.city%>" name="city">
          <h1 class="text-xl  mt-5 mb-5">State</h1>
          <input type="text" placeholder="State" value="<%=address.state%>" name="state">
          <h1 class="text-xl  mt-5 ">Make this my default address</h1>
          <input type="checkbox" name="isDefault">
          <hr class="mb-5">
          <input class="rounded-md px-4 py-2 bg-green-500  text-xl" type="submit" value="Create">
        </form>
    </div>   
</div>
