<%- include('./partials/header') %>

<% if(error.length > 0){ %>
    <div id="flash-message" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<% if(success.length > 0){ %>
    <div id="flash-message-success" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex items-center justify-center px-20">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <div class="text-center">
            <h4 class="text-2xl mb-8 text-gray-800 font-semibold">Set New Password</h4>
            <form action="/users/reset-password/<%= token %>" method="post" class="space-y-4">
                <input class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:border-blue-500"
                    type="password" placeholder="New Password" name="password" required>
                <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-5 rounded-lg transition-colors mt-6" 
                    type="submit">Update Password</button>
            </form>
            <a href="/" class="inline-block mt-4 text-blue-500 hover:text-blue-600 transition-colors">‚Üê Back to Login</a>
        </div>
    </div>
</div>

<% if(error.length > 0||success.length>0){ %>
    <script>
        const flashMessage = document.getElementById('flash-message');
        setTimeout(() => {
            flashMessage.style.display = 'none';
        }, 3000);
    </script>
<% } %>



